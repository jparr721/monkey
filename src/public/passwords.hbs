<h1>{{name}}</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Provider</th>
      <th scope="col">Username</th>
      <th scope="col">Password</th>
      <th scope="col">Created At</th>
      <th scope="col">Last Changed</th>
    </tr>
  </thead>
  <tbody>
    {{#each passwords}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.provider}}</td>
        <td>{{this.username}}</td>
        <td>{{this.key}}</td>
        <td>{{this.createdAt}}</td>
        <td>{{this.updatedAt}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<form action="/keys/" method="POST">
  <div class="form-group">
    <label>Provider</label>
    <input class="form-control" name="provider" placeholder="instagram" type="text">
    <label>Username</label>
    <input class="form-control" name="username" placeholder="jimmy" type="txt">
    <label>Password</label>
    <input class="form-control" name="key" placeholder="******" type="password">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">Create New Entry</button>
  </div>
</form>

<form action="/keys/delete" method="POST">
  <div class="form-group">
    <label>ID</label>
    <input class="form-control" name="id" placeholder="uuid" type="text">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-warning btn-block">Delete</button>
  </div>
</form>
